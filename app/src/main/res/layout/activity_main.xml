<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.delli.lgodutch.MainActivity">

    <EditText
        android:id="@+id/etAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_below="@+id/tvAmount"
        />

    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        />

    <EditText
        android:id="@+id/etNbr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/tvNbr"
        />

    <TextView
        android:id="@+id/tvNbr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Persons"
        android:layout_below="@+id/etAmount"
        />

    <Button
        android:id="@+id/btnCompute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go Dutch!"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:onClick="btnCompute"
        android:background="#4D4DFF"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:id="@+id/tvAmountPerPerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SHARE!"
        android:textSize="34sp"
        android:layout_below="@+id/etNbr"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:textColor="#ff0000"
        />
</RelativeLayout>
